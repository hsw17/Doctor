<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_20"
    android:background="@drawable/linear_history">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sView_history_adapter"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        app:roundAsCircle="true"
        android:layout_marginTop="@dimen/dp_16"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dp_16">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/dp_26">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问诊人"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="问诊时间"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_20"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name_history_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"/>
                <TextView
                    android:id="@+id/tv_time_history_adapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#333333"
                    android:layout_marginTop="@dimen/dp_10"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_26"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal"
            android:layout_marginBottom="@dimen/dp_16">
            <Button
                android:id="@+id/btn_InquiryDetails_history_adapter"
                android:layout_width="@dimen/dp_84"
                android:layout_height="@dimen/dp_34"
                android:background="@drawable/btn_bg"
                android:textSize="@dimen/sp_12"
                android:textColor="#deffffff"
                android:text="查看问诊记录"/>
            <Button
                android:id="@+id/btn_Evaluate_history_adapter"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_34"
                android:background="@drawable/btn_bg"
                android:layout_marginLeft="@dimen/dp_43"
                android:textSize="@dimen/sp_12"
                android:textColor="#deffffff"
                android:text="查看评价"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tv_Evaluate_history_adapter"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_34"
                android:layout_marginLeft="@dimen/dp_43"
                android:textSize="@dimen/sp_12"
                android:textColor="#de333333"
                android:text="暂无评价"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>