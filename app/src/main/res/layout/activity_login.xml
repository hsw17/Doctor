<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_235"
        android:background="@mipmap/login_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_email_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_40"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:hint="请输入邮箱账号"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_44"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:background="@mipmap/email"
                    android:layout_marginTop="@dimen/dp_47"
                    android:layout_marginLeft="@dimen/dp_32"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/et_pwd_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_30"
                    android:hint="请输入密码"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:paddingLeft="@dimen/dp_44"/>
                <ImageView
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:background="@mipmap/lock"
                    android:layout_marginTop="@dimen/dp_22"
                    android:layout_marginLeft="@dimen/dp_32"/>
                <ToggleButton
                    android:id="@+id/tg_btn_eye"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:background="@mipmap/close_eye"
                    android:button="@null"
                    android:checked="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_35"
                    android:layout_marginTop="@dimen/dp_25"
                    android:disabledAlpha="@android:integer/config_longAnimTime"
                    android:minWidth="@null"
                    android:minHeight="@null"
                    android:text="@null"
                    android:textOff="@null"
                    android:textOn="@null"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14">
                <TextView
                    android:id="@+id/tv_forget_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="忘记密码"
                    android:textColor="#666666"
                    android:textSize="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"/>
                <TextView
                    android:id="@+id/tv_register_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="申请入驻"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#3087"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_30"/>
            </RelativeLayout>
        </LinearLayout>
        <Button
            android:id="@+id/btn_login"
            android:layout_width="@dimen/dp_300"
            android:layout_height="wrap_content"
            android:text="登录"
            android:textSize="@dimen/dp_16"
            android:textColor="#ffffff"
            android:background="@drawable/btn_login"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30"/>
    </RelativeLayout>
</LinearLayout>