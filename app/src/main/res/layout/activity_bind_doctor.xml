<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.manage.BindDoctorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="@dimen/sp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@mipmap/flow"
                android:layout_marginBottom="@dimen/dp_4"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="绑定信息"
                    android:textSize="@dimen/sp_16"
                    android:textColor="#333333"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="身份证"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_50"/>
        <View
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_3"
            android:background="#3087ea"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_50"/>
        <RelativeLayout
            android:id="@+id/relative_id_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_8">
            <ImageView
                android:id="@+id/img_id_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:background="@mipmap/id_card_front"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="绑定身份证>>"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="#3087ea"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_id_card_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#333333"
            android:text="银行卡"
            android:layout_marginTop="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_50"/>
        <View
            android:layout_width="@dimen/dp_52"
            android:layout_height="@dimen/dp_3"
            android:background="#3087ea"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_marginLeft="@dimen/dp_50"/>
        <RelativeLayout
            android:id="@+id/relative_bank_card"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_160"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_8">
            <ImageView
                android:id="@+id/img_bank_card"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_160"
                android:background="@mipmap/bank_card_front"/>
            <TextView
                android:id="@+id/tv_bank_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="绑定银行卡>>"
                android:gravity="center"
                android:textSize="@dimen/sp_14"
                android:textColor="#3087ea"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rec_bank_card_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="如需更改银行卡信息,请致电000-596732"
        android:textSize="@dimen/sp_10"
        android:textColor="#3087ea"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_20"/>
</RelativeLayout>