<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_authorName_find_sick_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_16"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_12"
        android:text="[病症]"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_disease_find_sick_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/sp_10"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_12"
        android:text="[科室]"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_departmentName_find_sick_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#333333"
        android:layout_marginTop="@dimen/sp_10"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_12"
        android:text="[症状详情]"
        android:layout_marginTop="@dimen/dp_20"/>
    <TextView
        android:id="@+id/tv_detaile_find_sick_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/sp_10"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_12"
        android:text="[治疗经历]"
        android:layout_marginTop="@dimen/dp_20"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_treatmentHospital_find_sick_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/sp_10"
            android:textSize="@dimen/sp_12"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/tv_treatmentStartTime_find_sick_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12"/>
            <TextView
                android:id="@+id/tv_treatmentEndTime_find_sick_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#333333"
                android:textSize="@dimen/sp_12"/>
        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_treatmentProcess_find_sick_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666666"
        android:layout_marginTop="@dimen/sp_10"
        android:textSize="@dimen/sp_12"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3087ea"
        android:textSize="@dimen/sp_12"
        android:text="[相关图片]"
        android:layout_marginTop="@dimen/dp_20"/>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sView_picture_find_sick_info"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_144"
        android:layout_marginTop="@dimen/dp_10"/>
</LinearLayout>
