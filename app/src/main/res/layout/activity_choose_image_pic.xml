<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.manage.ChooseImagePicActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="为您设置一张证件照吧"
        android:textSize="@dimen/sp_16"
        android:textColor="#3087ea"
        android:layout_marginTop="@dimen/dp_45"
        android:layout_marginLeft="@dimen/dp_30"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/view_choose_image_pager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        android:layout_marginTop="@dimen/dp_70"/>
    <LinearLayout
        android:id="@+id/linear_choose"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_360"
        android:layout_marginTop="@dimen/dp_70"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:gravity="center_horizontal">
        <ImageView
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_64"
            android:background="@mipmap/my_icon_camera_n"
            android:layout_marginTop="@dimen/dp_40"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="自定义形象照"
            android:textColor="#666666"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_30"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="让你的形象独一无二"
            android:textSize="@dimen/sp_12"
            android:textColor="#666666"
            android:layout_marginTop="@dimen/dp_20"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_50"
            android:background="@mipmap/according_to_the_image"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/tv_ok_choose_image_pic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_36"
        android:layout_marginTop="@dimen/dp_40"
        android:gravity="center"
        android:background="@drawable/btn_bg"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="完成设置"
            android:textSize="@dimen/sp_14"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>