<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_customize"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#3087ea"
            android:text="为您设置一张证件照吧"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_40"/>
        <ImageView
            android:id="@+id/img_customize"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_360"
            android:background="@drawable/linear_bg"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"/>
        <LinearLayout
            android:id="@+id/linear_customize"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_360"
            android:background="@drawable/linear_bg"
            android:layout_marginTop="@dimen/dp_70"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:layout_width="@dimen/dp_64"
                android:layout_height="@dimen/dp_64"
                android:background="@mipmap/my_icon_camera_n"
                android:layout_marginTop="@dimen/dp_40"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自定义形象照"
                android:textColor="#666666"
                android:textSize="@dimen/sp_12"
                android:layout_marginTop="@dimen/dp_30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="让你的形象独一无二"
                android:textSize="@dimen/sp_12"
                android:textColor="#666666"
                android:layout_marginTop="@dimen/dp_20"/>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_131"
                android:layout_marginTop="@dimen/dp_50"
                android:background="@mipmap/according_to_the_image"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tv_ok_customize_image_pic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_40"
            android:gravity="center"
            android:background="@drawable/btn_bg"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="完成设置"
                android:textSize="@dimen/sp_14"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/linear_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:fitsSystemWindows="true"
        android:visibility="gone"
        android:background="@color/colorTransparent_15">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:id="@+id/tv_cinema"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:layout_marginLeft="@dimen/sp_10"
                android:layout_marginRight="@dimen/sp_10"
                android:background="@drawable/linear_change">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拍一张"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#3087ea"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tv_photo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginLeft="@dimen/sp_10"
                android:layout_marginRight="@dimen/sp_10"
                android:background="@drawable/linear_change">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="从相册选择"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#3087ea"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/tv_finish"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_40"
                android:background="@drawable/linear_change"
                android:layout_marginLeft="@dimen/sp_10"
                android:layout_marginRight="@dimen/sp_10"
                android:layout_marginBottom="@dimen/sp_10"
                android:gravity="center"
                android:layout_marginTop="@dimen/sp_10">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="取消"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#3087ea"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>