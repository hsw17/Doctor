<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#3087ea"
            android:layout_marginTop="@dimen/dp_74"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="完善信息"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_16"
            android:textColor="#3087ea"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_30"
            android:text="审核通过即可成功入驻"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_48"
            android:text="您的邮箱账号"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10">
            <EditText
                android:id="@+id/et_email_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/et_bg"
                android:singleLine="true"/>
            <Button
                android:id="@+id/btn_code_register"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="获取验证码"
                android:textSize="@dimen/sp_12"
                android:textColor="#ffffff"
                android:background="@drawable/btn_get_code"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:text="请输入验证码"/>
        <EditText
            android:id="@+id/et_code_register"
            android:layout_width="match_parent"
            android:phoneNumber="true"
            android:layout_height="@dimen/dp_40"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/et_bg"
            android:singleLine="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:text="请输入密码"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10">
            <EditText
                android:id="@+id/et_pwd_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="16"
                android:singleLine="true"
                android:background="@drawable/et_bg"/>
            <ToggleButton
                android:id="@+id/tg_btn_pwd_eye"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@mipmap/close_eye"
                android:button="@null"
                android:checked="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#666666"
            android:textSize="@dimen/sp_14"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_30"
            android:text="请再次输入密码"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_10">
            <EditText
                android:id="@+id/et_pwd1_register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxLength="16"
                android:singleLine="true"
                android:background="@drawable/et_bg"/>
            <ToggleButton
                android:id="@+id/tg_btn_pwd1_eye"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:background="@mipmap/close_eye"
                android:button="@null"
                android:checked="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_10"
                android:disabledAlpha="@android:integer/config_longAnimTime"
                android:minWidth="@null"
                android:minHeight="@null"
                android:text="@null"
                android:textOff="@null"
                android:textOn="@null"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_next_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:text="下一步"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_30"
        android:textSize="@dimen/sp_16"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/btn_bg"/>
</RelativeLayout>